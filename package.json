{
  "name": "cze",
  "version": "1.0.0",
  "description": "A CLI tool that simplifies and streamlines commit management, making it easier to follow commit conventions and maintain a clean commit history.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "fmt": "biome format --write",
    "lint": "biome lint --fix",
    "commit": "commitlint --edit ${1}"
  },
  "keywords": [
    "cze",
    "cli",
    "commits"
  ],
  "author": "Ryo",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@commitlint/cli": "^19.3.0",
    "@ryuux/config": "^1.0.2",
    "@types/node": "^22.1.0",
    "lefthook": "^1.7.11",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@ryuux/palette": "^1.0.0",
    "@ryuux/prompt": "^2.2.0"
  }
}
